<div class="container">
	<h1>List of hotels with geocodes</h1>

	<table>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Area</th>
			<th>Address</th>
			<th>Lat</th>
			<th>Lon</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>

	<% @hotels.each do |hotel| %>
		<tr>
			<td><%= hotel.id %></td>
			<td><%= hotel.name %></td>
			<td><%= hotel.area.try(:name) %></td>
			<td><%= hotel.address %></td>
			<td><%= hotel.latitude%></td>
			<td><%= hotel.longitude %></td>
			<td><%= link_to 'Show', hotel %></td>
		</tr>
	<% end %>
	</table>

	<br />


</div>